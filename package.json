{
  "name": "swiftcart",
  "private": true,
  "scripts": {
    "lint": "turbo lint",
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter api",
    "dev:studio": "turbo dev --filter studio",
    "build": "turbo build",
    "build:api": "turbo build --filter api",
    "build:studio": "turbo build --filter studio",
    "ui:add": "pnpm --filter common ui:add",
    "db:studio": "turbo db:studio",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "prettier": "prettier --write \"**/*.{ts,tsx,js,jsx,json,mjs,cjs,yaml,md}\""
  },
  "devDependencies": {
    "eslintconfig": "workspace:*",
    "prettier": "^3.2.5",
    "tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
